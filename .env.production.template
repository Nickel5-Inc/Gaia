# Gaia Validator v4.0 Production Environment Configuration
# Copy this file to .env and fill in your specific values

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================
BUILD_VERSION=4.0.0
BUILD_COMMIT=
BUILD_DATE=

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=gaia_validator
POSTGRES_USER=gaia_user
POSTGRES_PASSWORD=your_secure_database_password_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Process Management
NUM_COMPUTE_WORKERS=8
MAX_JOBS_PER_WORKER=100
SUPERVISOR_CHECK_INTERVAL_S=30

# Memory Limits (MB)
PROCESS_MAX_RSS_MB_IO=2048
PROCESS_MAX_RSS_MB_COMPUTE=1024
PROCESS_MAX_RSS_MB_SUPERVISOR=256

# Resource Limits for Docker
MEMORY_LIMIT=4G
CPU_LIMIT=4.0
MEMORY_RESERVATION=2G
CPU_RESERVATION=2.0

# =============================================================================
# WEATHER VALIDATION CONFIGURATION
# =============================================================================
WEATHER_GFS_CACHE_DIR=/app/data/cache/gfs
WEATHER_VALIDATOR_HASH_WAIT_MINUTES=10

# =============================================================================
# SUBSTRATE NETWORK CONFIGURATION
# =============================================================================
SUBSTRATE_NETWORK=finney
SUBSTRATE_NETUID=15
SUBSTRATE_SUBTENSOR_ADDRESS=wss://entrypoint-finney.opentensor.ai:443
SUBSTRATE_WALLET_NAME=your_wallet_name
SUBSTRATE_WALLET_HOTKEY=your_hotkey_name

# =============================================================================
# R2 STORAGE CONFIGURATION
# =============================================================================
R2_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=gaia-weather-data
R2_CLEANUP_ENABLED=true
R2_CLEANUP_RETENTION_DAYS=30

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/validator.log

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Grafana Configuration (if using monitoring profile)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password

# =============================================================================
# HTTP CLIENT CONFIGURATION
# =============================================================================
HTTP_TIMEOUT_SECONDS=30
HTTP_MAX_CONNECTIONS=100
HTTP_RETRY_ATTEMPTS=3

# =============================================================================
# OPTIONAL CONFIGURATION FILE
# =============================================================================
# If you want to use a custom config file instead of environment variables
# CONFIG_FILE=./config/production.yaml

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Add any API keys, tokens, or other sensitive configuration here
# Make sure this file is not committed to version control!

# Example: External API keys
# EXTERNAL_API_KEY=your_api_key_here
# EXTERNAL_API_SECRET=your_api_secret_here

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
# Configure ports if different from defaults
# PROMETHEUS_PORT=9090

# =============================================================================
# BACKUP AND MAINTENANCE
# =============================================================================
# Backup configuration (if using backup scripts)
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
# BACKUP_RETENTION_DAYS=7

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================
# Uncomment these for development/staging environments
# LOG_LEVEL=DEBUG
# NUM_COMPUTE_WORKERS=2
# PROMETHEUS_PORT=9090